<div class="container mt-5">
    <div class="box">
        <h1 class="title is-4">Especialidades</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% specialties.forEach((specialty, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= specialty.name %></td>
                        <td>
                            <a href="/specialties/edit/<%= specialty.id %>" class="button is-small is-info">Editar</a>
                            <a href="/specialties/delete/<%= specialty.id %>" class="button is-small is-danger">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/specialties/create" class="button is-link mt-3">Agregar Nueva Especialidad</a>
    </div>
</div>
