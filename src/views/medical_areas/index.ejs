<div class="container mt-5">
    <div class="box">
        <h1 class="title is-4">Áreas Médicas</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% medicalAreas.forEach((area, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= area.name %></td>
                        <td><%= area.description %></td>
                        <td>
                            <a href="/medical_areas/edit/<%= area.id %>" class="button is-small is-info">Editar</a>
                            <a href="/medical_areas/delete/<%= area.id %>" class="button is-small is-danger">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/medical_areas/create" class="button is-link mt-3">Agregar Nueva Área Médica</a>
    </div>
</div>
