<div class="container mt-5">
    <div class="box">
        <h1 class="title is-4">Doctores</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Especialidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% doctors.forEach((doctor, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= doctor.name %></td>
                        <td><%= doctor.specialty %></td>
                        <td>
                            <a href="/doctors/edit/<%= doctor.id %>" class="button is-small is-info">Editar</a>
                            <a href="/doctors/delete/<%= doctor.id %>" class="button is-small is-danger">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/doctors/create" class="button is-link mt-3">Agregar Nuevo Doctor</a>
    </div>
</div>
